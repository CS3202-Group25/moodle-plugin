{{!
    @template mod_workflow/view_request
    Admin heading setting template.
    Context variables required for this template:
    * title - Title text
    * description - Description containing descriptionformatted
    Example context (json):
    {
        "title": "Favourite cheeses",
        "description": true,
        "descriptionformatted": "Stilton, Cheddar, Edam"
    }
}}
<style>
    img{
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

</style>
<div class="row">
    <div>
        <img class="m-4" src="data:image/png;base64,{{profilePic}}">
    </div>
    <div>
        <p class="mt-3"><strong>{{name}}</strong> </p>
        <p class="">{{date}}</p>
    </div>
</div>

<p class="lh-base">Student Index Number : {{studentid}}</p>
<p class="lh-base">Request Type : {{requesttype}}</p>

{{#isassessment}}
    <p class="lh-base">Assessment Type : {{assessmenttype}}</p>
    <p class="lh-base">Assessment Name : {{assessment}}</p>
    <p class="lh-base">Required Extend Time : {{extendtime}}</p>
{{/isassessment}}

<p class="lh-base">Reason : {{description}}</p>

{{#buttons}}
    <a href="/mod/workflow/update.php?requestid={{requestId}}&value={{btnId}}&cmid={{cmid}}", class="btn btn-primary">{{btnValue}}</a>
{{/buttons}}